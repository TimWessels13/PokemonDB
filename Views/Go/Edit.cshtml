@model Go

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Go</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PokemonsId" class="control-label"></label>
                <select asp-for="PokemonsId" class="form-control" asp-items="ViewBag.PokemonsId"></select>
                <span asp-validation-for="PokemonsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seen" class="control-label"></label>
                <input asp-for="Seen" class="form-control" />
                <span asp-validation-for="Seen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caught" class="control-label"></label>
                <input asp-for="Caught" class="form-control" />
                <span asp-validation-for="Caught" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Lucky" /> @Html.DisplayNameFor(model => model.Lucky)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shiny" /> @Html.DisplayNameFor(model => model.Shiny)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shadow" /> @Html.DisplayNameFor(model => model.Shadow)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

