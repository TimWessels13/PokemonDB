@model Pokemon

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pokemon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        @if (Model.Number < 100)
        {
            var number = "00" + Model.Number;
            <dd class="col-sm-10">
                @number
            </dd>
        }
        else
        {
            var number = Model.Number;
            <dd class="col-sm-10">
                @number
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img style="max-width: 500px;" class="afbeelding" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/@Model.url" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Generation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Generation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Special_Attack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Special_Attack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Defense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Defense)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Special_Defense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Special_Defense)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Speed)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
