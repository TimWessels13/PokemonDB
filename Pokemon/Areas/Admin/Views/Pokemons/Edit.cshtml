@model Pokemon

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <b>Number</b>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="ColorId" class="control-label"></label></b>
                        <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                        <span asp-validation-for="ColorId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="HP" class="control-label"></label></b>
                        <input asp-for="HP" class="form-control" />
                        <span asp-validation-for="HP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Special_Attack" class="control-label"></label></b>
                        <input asp-for="Special_Attack" class="form-control" />
                        <span asp-validation-for="Special_Attack" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Special_Defense" class="control-label"></label></b>
                        <input asp-for="Special_Defense" class="form-control" />
                        <span asp-validation-for="Special_Defense" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <b><label asp-for="Name" class="control-label"></label></b>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="GenderId" class="control-label"></label></b>
                        <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                        <span asp-validation-for="GenderId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Attack" class="control-label"></label></b>
                        <input asp-for="Attack" class="form-control" />
                        <span asp-validation-for="Attack" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Defense" class="control-label"></label></b>
                        <input asp-for="Defense" class="form-control" />
                        <span asp-validation-for="Defense" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Speed" class="control-label"></label></b>
                        <input asp-for="Speed" class="form-control" />
                        <span asp-validation-for="Speed" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label"><b>Type</b></label>
                    <div class="col-md-12">
                        <div class="row">
                            @foreach (var pt in ViewBag.Poketype)
                            {
                                if (ViewBag.PokemonType != null)
                                {
                                    foreach (var pok in ViewBag.PokemonTypes)
                                    {
                                        if (pt.Id == pok.PokeTypeId)
                                        {
                                            <div class="col-md-2 col-sm-4"><input name="poketype" type="checkbox" value="@pt.Id" checked /> @pt.Name</div>
                                        }
                                        else
                                        {
                                            <div class="col-md-2 col-sm-4"><input name="poketype" type="checkbox" value="@pt.Id" /> @pt.Name</div>
                                        }
                                    }
                                }
                                else
                                {
                                    <div class="col-md-2 col-sm-4"><input name="poketype" type="checkbox" value="@pt.Id" /> @pt.Name</div>
                                }

                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

